<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="410dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Adicionar Filme"
        android:textSize="24sp"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/editTextAdicionarNome"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Nome do filme"
        android:inputType="text"
        android:background="@drawable/custom_input"
        android:drawablePadding="6dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/darkDarkerGray"
        android:textSize="16dp"
        android:layout_marginBottom="12dp"
        android:drawableStart="@drawable/ic_movie"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextAdicionarCategoria"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Categoria"
            android:inputType="text"
            android:background="@drawable/custom_input"
            android:drawablePadding="6dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/darkDarkerGray"
            android:textSize="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="12dp"
            android:drawableStart="@drawable/ic_category"/>

        <EditText
            android:id="@+id/editTextAdicionarNota"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:hint="0 - 10"
            android:inputType="numberDecimal"
            android:background="@drawable/custom_input"
            android:drawablePadding="6dp"
            android:textColor="@color/black"
            android:textColorHint="@color/darkDarkerGray"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textSize="16dp"
            android:drawableStart="@drawable/ic_star"/>
    </LinearLayout>

    <EditText
        android:id="@+id/editTextAdicionarComentario"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:gravity="top"
        android:hint="Digite seu comentÃ¡rio..."
        android:inputType="text"
        android:padding="8dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColorHint="@color/darkDarkerGray"
        android:textSize="16dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonConfirm"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_button"
        android:gravity="center"
        android:text="Adicionar"
        android:textColor="@color/white" />

</LinearLayout>
